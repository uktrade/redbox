{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Runserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/django_app/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8080"
            ],
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONUNBUFFERED": "1",
                "USE_LOCAL_ENV": "true"
            },
            "serverReadyAction": {
                "pattern": "Starting development server",
                "action": "openExternally",
                "uriFormat": "http://localhost:8080"
            },
            "preLaunchTask": "docker-compose up deps",
            "postDebugTask": "docker-compose down deps"
        },

        {
            "name": "Django: QCluster (no debug)",
            "type": "python",
            "request": "launch",

            "program": "${workspaceFolder}/django_app/manage.py",
            "args": ["qcluster"],

            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONUNBUFFERED": "1",
                "USE_LOCAL_ENV": "true"
            },

            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",

            "preLaunchTask": "docker-compose up deps",

            "presentation": {
                "panel": "dedicated",
                "reveal": "always",
                "group": "qcluster",
                "showReuseMessage": false
            }
        }

    ],
    "compounds": [
        {
            "name": "Full Stack Dev (Frontend + Django)",
            "type": "compound",
            "configurations": [
                "Django: Runserver",
                "Django: QCluster (no debug)"
            ],
            "preLaunchTask": "docker-compose up deps",
            "postDebugTask": "docker-compose down deps"
        }
    ]
}
